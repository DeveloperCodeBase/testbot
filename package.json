{
    "name": "autonomous-test-bot",
    "version": "1.0.0",
    "description": "Autonomous multi-language AI test bot for automatic test generation and execution",
    "main": "dist/index.js",
    "bin": {
        "testbot": "./dist/cli/index.js"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "cli": "ts-node src/cli/index.ts",
        "demo:run": "node dist/cli/index.js analyze /home/ubuntu/Desktop/ai-testbot-demo-project --auto-fix --coverage-threshold 80 --output ./artifacts/demo-regression",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "keywords": [
        "testing",
        "ai",
        "automation",
        "test-generation",
        "multi-language"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.2",
        "body-parser": "^2.2.1",
        "commander": "^11.1.0",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "fast-glob": "^3.3.2",
        "handlebars": "^4.7.8",
        "js-yaml": "^4.1.0",
        "node-fetch": "^3.3.2",
        "simple-git": "^3.22.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1",
        "xml2js": "^0.6.2"
    },
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@types/body-parser": "^1.19.6",
        "@types/express": "^5.0.6",
        "@types/jest": "^29.5.14",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.10.6",
        "@types/node-fetch": "^2.6.13",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.7",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "prettier": "^3.1.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}