# OpenRouter configuration
OPENROUTER_API_KEY=
# OpenRouter configuration
# OpenRouter configuration
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_APP_NAME=ai-testbot

LLM_MODE=balanced

# مدل برنامه‌ریزِ باهوش (کیفیت بالا، ولی گرون‌تر)
LLM_MODEL_PLANNER=nousresearch/hermes-3-llama-3.1-405b

# مدل کدنویسی/تست‌نویسی (متعادل‌تر از نظر قیمت)
LLM_MODEL_CODER=qwen/qwen-2.5-coder-32b-instruct

# متن‌های طولانی / معماری / ریپورت
LLM_MODEL_LONG_CONTEXT=meta-llama/llama-3.3-70b-instruct

# کمک‌کار سبک (کارهای ساده، explain، خلاصه‌سازی)
LLM_MODEL_HELPER=mistralai/mistral-7b-instruct

# مدل fallback عمومی
OPENROUTER_MODEL=qwen/qwen-2.5-coder-32b-instruct

# تا وقتی همه‌چی درست شد بعداً می‌تونیم ارزان‌ترش کنیم
LLM_MAX_TOKENS_PER_RUN=250000
LLM_TOKEN_WARN_THRESHOLD=0.8


